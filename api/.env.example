# Server Configuration (Required)
PORT=your_port_here

# Admin API Authentication (Required for admin endpoints)
# Used for: approving/rejecting DReps, regenerating API keys, listing registrations
# Generate a secure random string for this
SERVER_API_KEY=your_admin_api_key_here

# Admin Wallet Addresses (Required for admin UI access)
# Comma-separated list of wallet addresses that can access the admin panel
ADMIN_WALLET_ADDRESSES=your_admin_wallet_address_here

# JWT Configuration (Required for DRep wallet authentication)
# Secret key for signing JWTs - generate a secure random string (min 32 chars)
JWT_SECRET=your_jwt_secret_here
# JWT expiry in seconds (default: 7 days = 604800)
JWT_EXPIRY_SECONDS=604800

# Per-DRep API keys are generated via the registration flow:
# 1. POST /sentiment/drep/register to register a DRep
# 2. POST /sentiment/drep/{drepId}/approve (with SERVER_API_KEY) to generate DRep API key
# The generated API key (format: drep_sk_*) should be used in Discord bot's API_KEY env var

# Rate Limiting Configuration (Required)
# Time window in milliseconds
RATE_LIMIT_WINDOW_MS=your_rate_limit_window_ms_here
# Maximum number of requests per window
RATE_LIMIT_MAX_REQUESTS=your_rate_limit_max_requests_here

# Database Configuration (Required)
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=your_database_url_here

# Blockfrost API (Required - for reading blockchain data)
# Get your API key from: https://blockfrost.io/
MAINNET_BLOCKFROST_API_KEY=your_blockfrost_api_key_here

# Koios API (Required - for governance data ingestion)
# API Documentation: https://api.koios.rest/
KOIOS_BASE_URL=your_koios_base_url_here
KOIOS_API_KEY=your_koios_api_key_here

# Cron Job Configuration (Required)
# Enable or disable automatic proposal sync cron job
ENABLE_CRON_JOBS=true

# Cron schedule for proposal sync (Required - cron syntax)
# Examples:
#   */5 * * * *   - Every 5 minutes
#   */15 * * * *  - Every 15 minutes
#   0 * * * *     - Every hour at minute 0
#   0 */6 * * *   - Every 6 hours
PROPOSAL_SYNC_SCHEDULE=your_proposal_sync_schedule_here

# Cron schedule for DRep and SPO voting power sync (Required - cron syntax)
# Examples:
#   30 */6 * * *  - Every 6 hours at minute 30
#   0 */12 * * *  - Every 12 hours
#   0 0 * * *     - Once daily at midnight
VOTER_POWER_SYNC_SCHEDULE=your_voter_power_sync_schedule_here
